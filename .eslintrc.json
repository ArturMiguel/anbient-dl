{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "quotes": ["error", "single"],
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "linebreak-style": "off",
        "space-before-function-paren": "off",
        "import/extensions": "off",
        "comma-dangle": "off",
        "max-len": "off",
        "no-restricted-syntax": "off",
        "no-await-in-loop": "off",
        "radix": "off",
        "no-console": "off"
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".ts"]
            }
        }
    }
}
